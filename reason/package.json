{
  "name": "reason",
  "version": "0.0.0",
  "description": "My Project",
  "esy": {
    "build": "pesy",
    "release": {
      "releasedBinaries": [
        "ReasonApp.exe"
      ]
    }
  },
  "buildDirs": {
    "test": {
      "require": ["reason.lib"],
      "main": "TestReason",
      "name": "TestReason.exe"
    },
    "library": {
      "name": "reason.lib",
      "namespace": "Reason"
    },
    "executable": {
      "require": ["reason.lib"],
      "main": "ReasonApp",
      "name": "ReasonApp.exe"
    }
  },
  "scripts": {
    "pesy": "bash -c 'env PESY_MODE=update pesy'",
    "test": "esy x TestReason.exe"
  },
  "dependencies": {
    "@opam/dune": ">=1.6.0",
    "@esy-ocaml/reason": "*",
    "refmterr": "*",
    "ocaml": "^4.4.0",
    "pesy": "*"
  },
  "devDependencies": {
    "@opam/merlin": "*"
  }
}
